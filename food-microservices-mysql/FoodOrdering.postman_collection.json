{
  "info": {
    "name": "Food Ordering \u2013 Order & Payment (Local MySQL)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Payment Direct",
      "item": [
        {
          "name": "Authorize Payment (CARD)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"orderId\":\"test-1\",\"userId\":\"u-123\",\"amount\":20,\"currency\":\"USD\",\"method\":\"CARD\" }",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{payment_base}}/api/payments"
            }
          }
        }
      ]
    },
    {
      "name": "Happy Path (CARD)",
      "item": [
        {
          "name": "Order - Create (CARD)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"userId\":\"u-123\",\"restaurantId\":\"r-88\",\"items\":[{\"menuItemId\":\"m-1\",\"quantity\":2}],\"paymentMethod\":\"CARD\" }",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{order_base}}/api/orders"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.response.to.have.status(201);",
                  "pm.environment.set('orderId', pm.response.json().orderId);"
                ]
              }
            }
          ]
        },
        {
          "name": "Order - Get by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{order_base}}/api/orders/{{orderId}}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.response.to.have.status(200);"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Fail Path (FAIL)",
      "item": [
        {
          "name": "Order - Create (FAIL)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"userId\":\"u-123\",\"restaurantId\":\"r-88\",\"items\":[{\"menuItemId\":\"m-5\",\"quantity\":1}],\"paymentMethod\":\"FAIL\" }",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{order_base}}/api/orders"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.response.to.have.status(201);",
                  "pm.environment.set('failOrderId', pm.response.json().orderId);"
                ]
              }
            }
          ]
        },
        {
          "name": "Order - Get by ID (FAIL)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{order_base}}/api/orders/{{failOrderId}}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.response.to.have.status(200);"
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}
